<?xml version="1.0" encoding="UTF-8"?>

<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui" 
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:select="urn:import:org.gwtbootstrap3.extras.select.client.ui"
	xmlns:b.gwt="urn:import:org.gwtbootstrap3.client.ui.gwt"
	xmlns:cv="urn:import:com.google.gwt.user.cellview.client">

	<!--ui:style> #savebutton { position: relative; margin: 20px; z-index: 100; 
		} </ui:style -->
	<b:Form ui:field="form" visible="false">
		<!-- b:Button styleName="btn btn-fab btn-raised btn-success" ui:field="savebutton" 
			ui:id="savebutton" icon="SAVE"/ -->
		<b:NavTabs>
			<b:TabListItem active="true" ui:field="requiredtabitem"
				dataTarget="#required" text="Important" />
			<b:TabListItem ui:field="optionaltabitem" dataTarget="#optional"
				text="Optional" />
		</b:NavTabs>
		<b:Well>
			<b:TabContent>
				<b:TabPane active="true" b:id="required" ui:field="requiredtab" />
				<b:TabPane b:id="optional" ui:field="optionaltab" />
			</b:TabContent>
		</b:Well>
			<b:Modal title="Set Permissions" closable="true" fade="true" ui:field="permissiondialog">
		<b:ModalBody>
			<b:FormGroup>
			<b:Row>
			    <b:Column size="XS_2" addStyleNames="permissionlabel">
			        <b:Heading size="H5" text="User"></b:Heading>
				</b:Column>
				<b:Column size="XS_10">
					<select:Select ui:field="userlist" visible="false" liveSearch="true" title="Select" visibleSize="8"/>
					<b:HelpBlock />
				</b:Column>
			</b:Row>
			<b:Row>
				<b:Column size="XS_2" addStyleNames="permissionlabel">
					<b:Heading size="H5" text="Permission"></b:Heading>
				</b:Column>
				<b:Column size="XS_10">
					<select:Select ui:field="permlist" visible="false" liveSearch="true" title="Select" visibleSize="2"/>
					<b:HelpBlock />
				</b:Column>
			</b:Row>	
			</b:FormGroup>
			<b:Row>
				<b:Column size="XS_12">
					<g:FlowPanel>
						<b:PageHeader ui:field="title" subText="" />
					</g:FlowPanel>
			
					<b:Panel type="INFO">
						<b:PanelHeader styleName="panel-heading tight-header">
							<g:HorizontalPanel verticalAlignment="MIDDLE" width="100%">
								<b:Heading size="H6" text="All Permissions" />
							</g:HorizontalPanel>
						</b:PanelHeader>
						<b:PanelBody styleName="panel-body tight-body">
							<b.gwt:CellTable condensed="false" striped="true" hover="true" width="100%" ui:field="table" />
							<g:VerticalPanel width="100%" horizontalAlignment="CENTER">
								<cv:SimplePager ui:field="pager" location="CENTER" />
							</g:VerticalPanel>
						</b:PanelBody>
					</b:Panel>
				</b:Column>
			</b:Row>
		</b:ModalBody>
		<b:ModalFooter>
			<b:Button type="INFO" dataDismiss="MODAL" ui:field="cancelbutton" text="Cancel" />				
			<b:Button type="SUCCESS" dataDismiss="MODAL" ui:field="setpermbutton" text="Submit" />
		</b:ModalFooter>
	</b:Modal>
	</b:Form>
</ui:UiBinder>